.vol-swiper {
  height: 100%;
}

.vol-swiper-item {
  padding: 0 25rpx;
  box-sizing: border-box;
}

.vol-card {
  padding: 20rpx;
  border: 1px solid #ebebeb;
}

.vol-picture {
  width: 100%;
}

.vol-meta {
  padding: 10rpx 5rpx;
  font-size: 12px;
  color: #888;
}

.vol-author {
  float: right;
}

.vol-content {
  margin-top: 30rpx;
  padding: 0 5rpx;
  font-size: 14px;
  line-height: 1.4;
}

.vol-content-desc {
  width: 100%;
  display: inline-block;
}